host *
port <%= node["munin"]["port"] %>
host_name = <%= node["munin"]["host_name"] %>

<% node["munin"]["cidr_allow"].each do |cidr| %>
cidr_allow <%= cidr %>
<% end %>

<% node["munin"]["allow"].each do |allow| %>
allow <%= allow %>
<% end %>

user       root
group      root
background 1
setsid     1

log_level 4
log_file  /var/log/munin/munin-node.log
pid_file  /var/run/munin-node.pid

ignore_file \.bak$
ignore_file ^README$
ignore_file \.dpkg-(old|new)$
ignore_file \.rpm(save|new)$
ignore_file \.puppet-new$