host *
port <%= node["munin-node"]["port"] %>
host_name = '<%= node["munin-node"]["host_name"] %>'

<% node["munin-node"]["cidr_allow"].each do |cidr| %>
cidr_allow <%= cidr %>
<% end %>

<% node["munin-node"]["allow"].each do |allow| %>
allow '<%= allow %>'
<% end %>

user       root
group      root
background 1
setsid     1

log_level 4
log_file  /var/log/munin/munin-node.log
pid_file  /var/run/munin-node.pid

ignore_file \.bak$
ignore_file ^README$
ignore_file \.dpkg-(old|new)$
ignore_file \.rpm(save|new)$
ignore_file \.puppet-new$